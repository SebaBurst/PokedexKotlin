<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="130dp">



    <ImageView
        android:id="@+id/poke_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/circle"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pokeball"
        />
    <TextView
        android:id="@+id/numberPokedex"
        android:layout_width="97dp"
        android:layout_height="53dp"
        android:text="1009"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"


        app:layout_constraintBottom_toBottomOf="@+id/poke_item_bg"
        app:layout_constraintEnd_toEndOf="@+id/poke_item_bg"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="@+id/poke_item_bg"
        app:layout_constraintTop_toTopOf="@+id/poke_item_bg"
        app:layout_constraintVertical_bias="0.508" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pokemon_artwork_list"
        android:layout_width="147dp"
        android:layout_height="104dp"
        android:layout_marginStart="48dp"
        android:bottom="260dp"
        android:left="20dp"
        android:right="10dp"
        android:src="@drawable/charcadet"
        android:top="260dp"
        app:layout_constraintBottom_toBottomOf="@+id/poke_item_bg"
        app:layout_constraintStart_toStartOf="@+id/poke_item_bg"
        app:layout_constraintTop_toTopOf="@+id/poke_item_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>